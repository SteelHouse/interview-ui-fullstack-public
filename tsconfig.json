{
  "exclude": ["client"],
  "include": ["server", "prisma"],
  "ts-node": {
    // It is faster to skip typechecking.
    // Remove if you want ts-node to do typechecking.
    "transpileOnly": true,
    "files": true,
  },
  "compilerOptions": {
    "baseUrl": "server",
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "es2021",
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "lib": ["esnext"],
    "skipLibCheck": true,
    "typeRoots": ["@types"]
  }
}
